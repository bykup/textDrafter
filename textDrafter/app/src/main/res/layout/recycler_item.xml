<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="smsvaluesmodel"
            type="com.byku.android.textdrafter.activities.adapters.models.RecyclerSmsModel" />

        <variable
            name="smsvalueslisteners"
            type="com.byku.android.textdrafter.activities.adapters.listeners.SmsValuesListeners"/>
    </data>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_variable_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textSize="@dimen/recycler_item_text_normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/edittext_variable_value"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@{smsvaluesmodel.key}"
            tools:text="1:" />

        <EditText
            android:id="@+id/edittext_variable_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textSize="@dimen/recycler_item_text_normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@{smsvaluesmodel.value}"
            tools:text="123.4" />
    </android.support.constraint.ConstraintLayout>

</layout>