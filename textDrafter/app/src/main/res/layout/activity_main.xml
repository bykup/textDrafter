<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="mainmodel"
            type="com.byku.android.textdrafter.activities.MainModel" />

        <variable
            name="handlers"
            type="com.byku.android.textdrafter.activities.MainHandler" />

        <variable
            name="listeners"
            type="com.byku.android.textdrafter.activities.MainListeners" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:activity="com.byku.android.textdrafter.activities.MainActivity">

        <TextView
            android:id="@+id/textview_sms_draft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@{mainmodel.smsText}"
            android:textColor="@color/main_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintTop_creator="1"
            tools:text="Testowy [1] sms [2]" />

        <Button
            android:id="@+id/button_sms_prepare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/button_prepare"
            app:layout_constraintLeft_toLeftOf="@+id/recyclerview_sms_values"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_sms_draft"
            android:onClick="@{(view) -> handlers.onClick(mainmodel.activity, listeners.getListener(mainmodel))}"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_sms_values"
            android:layout_width="368dp"
            android:layout_height="0dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_sms_prepare" />
    </android.support.constraint.ConstraintLayout>
</layout>